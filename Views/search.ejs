<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animal Search</title>
</head>
<body>
    <h1>Search for Animals</h1>

    <!-- Search Form -->
    <form action="/search" method="get">
        <input id="search_box" type="text" name="search_text" value="<%= searchText %>" placeholder="Search for animals or species">
        <input type="submit" value="Search">
    </form>

    <!-- Results -->
    <% if (animals && animals.length > 0) { %>
        <h2>Search Results:</h2>
        <ul>
            <% animals.forEach(animal => { %>
                <li>
                    <strong>Name:</strong> <%= animal.animal_name %>, 
                    <strong>Species:</strong> <%= animal.species %>, 
                    <strong>Continent:</strong> <%= animal.continent_name %>
                </li>
            <% }); %>
        </ul>
    <% } else if (searchText) { %>
        <p>No animals found matching your search: "<%= searchText %>"</p>
    <% } %>
</body>
</html>
